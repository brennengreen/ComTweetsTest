  h2=`Tweets Mentioning: \"${filter_topic}\"`
  - var n = 0;
  while n < 9 && n < tweets.length
      blockquote(class='twitter-tweet' data-theme='light')
        p(lang="en")=tweets[n].message
        p=`—${tweets[n++].author}`

  
